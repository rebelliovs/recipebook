        android:id="@+id/btnIngredients"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toLeftOf="@id/sortingSpinner"
        android:layout_marginEnd="16dp"
        android:background="#00B8D4"
        android:onClick="onIngredients"
        android:text="@string/ingr"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sortingSpinner"
        android:layout_toStartOf="@id/sortingSpinner" />
